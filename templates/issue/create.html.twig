{% extends 'layout.html.twig' %}
{% form_theme form 'forms/issue.html.twig' %}
{% block content %}
    <div class="form-container">
        <div class="mb-4">
            <h1 id="main-heading">
                {% if edit is defined and edit is same as(true) %}
                    Edit issue #{{ issue.id }}
                {% else %}
                    Report a New Issue
                {% endif %}
            </h1>
            <p class="text-muted">Fill out the details below to log a technical issue or feature request.</p>
        </div>
        <div class="card p-4 p-md-5 bg-white">
            {{ form_start(form, {attr: {'aria-labelledby': "main-heading"}}) }}
            {{ form_row(form) }}
            <div class="d-grid">
                {% if edit is defined and edit is same as(true) %}
                    <button type="submit" class="btn btn-info text-white btn-lg shadow-sm">
                        <i class="fa-solid fa-check"></i> Save changes
                    </button>
                {% else %}
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        <i class="fa-solid fa-plus"></i> Create Issue
                    </button>
                {% endif %}
            </div>
            {{ form_end(form) }}
        </div>
        <div class="mt-4 text-center">
            <a href="{{ url('app.issues.all') }}" class="text-decoration-none text-secondary small">Back to
                Dashboard</a>
        </div>
    </div>
{% endblock content %}
{% block styleshseets %}
    <style>
        .form-check {
            display: inline-block;
        }
    </style>
{% endblock styleshseets %}
